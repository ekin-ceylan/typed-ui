{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",

        "allowJs": true,
        "checkJs": true,

        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": false,
        "outDir": "types-tmp",
        "skipLibCheck": true
    },
    "include": ["src/**/*.js"],
    "exclude": ["src/tests/*", "src/main.js"]
}
