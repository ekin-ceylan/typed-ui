{
    "name": "typed-ui",
    "version": "0.4.0",
    "title": "Typed UI",
    "description": "Typed UI: Field/data-type specific, accessible, extensible Web Components.",
    "author": "Ekin Ceylan <ekinceylan@gmail.com> (https://github.com/ekin-ceylan)",
    "license": "MIT",
    "type": "module",
    "main": "dist/typed-ui.all.js",
    "module": "dist/typed-ui.all.js",
    "exports": {
        ".": {
            "import": "./dist/typed-ui.all.js",
            "types": "./dist/typed-ui.all.d.ts"
        },
        "./base": {
            "import": "./dist/typed-ui.base.js",
            "types": "./dist/typed-ui.base.d.ts"
        },
        "./iife": {
            "import": "./dist/typed-ui.iife.js"
        }
    },
    "types": "dist/typed-ui.all.d.ts",
    "files": [
        "dist",
        "types",
        "README.md",
        "LICENSE"
    ],
    "sideEffects": false,
    "keywords": [
        "typed-ui",
        "web-components",
        "custom-elements",
        "form",
        "field",
        "data-type",
        "accessibility",
        "a11y",
        "validation"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ekin-ceylan/typed-ui.git"
    },
    "bugs": {
        "url": "https://github.com/ekin-ceylan/typed-ui/issues"
    },
    "homepage": "https://github.com/ekin-ceylan/typed-ui#readme",
    "scripts": {
        "dev": "vite",
        "build": "rimraf dist/* --glob && npm run build:bundle && npm run build:types",
        "build:bundle": "node scripts/build-esb.mjs",
        "build:types": "npm run types:raw && npm run types:bundle && npm run types:clean",
        "types:raw": "tsc -p tsconfig.types.json",
        "types:bundle": "rollup -c scripts/rollup.dts.config.mjs",
        "types:clean": "rimraf types-tmp",
        "preview": "vite preview",
        "format": "prettier --write \"src/**/*.{ts,js,html,css}\"",
        "lint": "prettier --check \"src/**/*.{ts,js,html,css}\"",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest --coverage",
        "prepublishOnly": "npm run test:run && npm run build"
    },
    "devDependencies": {
        "@vitest/coverage-v8": "^3.2.4",
        "esbuild-plugin-minify-html-literals": "^3.0.0",
        "jsdom": "^27.0.1",
        "lit": "^3.3.0",
        "prettier": "^3.4.2",
        "rimraf": "^6.1.2",
        "rollup": "^4.54.0",
        "rollup-plugin-dts": "^6.3.0",
        "typescript": "^5.9.3",
        "vite": "^6.0.11",
        "vitest": "^3.2.4"
    },
    "peerDependencies": {
        "lit": "^3.3.0"
    }
}
